<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/headeranimation"
    tools:context="com.student.githubp.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_weight="0.48"
        android:background="@drawable/logo"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:text="GitHub is a development platform inspired by the way you work. From open source to business, you can host and review code, manage projects, and build software alongside millions of other developers."
        tools:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:textSize="18sp" />
    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="Features"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonborder"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonborder"
        android:textColor="@color/white"
        android:text="Business"/>
    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonborder"
        android:textColor="@color/white"
        android:text="Explore"/>
    <Button
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonborder"
        android:textColor="@color/white"
        android:text="Marketplace"/>
    <Button
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonborder"
        android:textColor="@color/white"

        android:text="Pricing" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:columnCount="3"
        android:rowCount="2">

        <EditText
            android:id="@+id/editText"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:text="Search"
            android:textAlignment="center">

        </EditText>

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="76dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/github2" />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="157dp"
            android:layout_height="85dp"
            android:layout_weight="0.50"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonborder"
            android:textColor="@color/white"
            android:text="NEW USER SIGN UP" />

        <Button
            android:id="@+id/button"
            android:layout_width="157dp"
            android:layout_height="85dp"
            android:layout_weight="0.50"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonborder"
            android:textColor="@color/white"
            android:onClick="onSignIn"
            android:text="SIGN IN" />
    </LinearLayout>

</LinearLayout>
